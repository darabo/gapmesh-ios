<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>fa</string>
	<key>CFBundleDisplayName</key>
	<string>Gap Mash</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>bitchat</string>
			</array>
		</dict>
	</array>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	<key>LSMinimumSystemVersion</key>
	<string>$(MACOSX_DEPLOYMENT_TARGET)</string>
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>Gap Mash uses Bluetooth to create a secure mesh network for chatting with nearby users.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>Gap Mash uses Bluetooth to discover and connect with other bitchat users nearby.</string>
	<key>NSCameraUsageDescription</key>
	<string>Gap Mash uses the camera to scan QR codes to verify peers.</string>
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Gap Mash uses your approximate location to compute local geohash channels for optional public chats. Exact GPS is never shared.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>Gap Mash uses the microphone to record voice notes that relay across the mesh.</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Gap Mash lets you pick images from your photo library to share with nearby peers.</string>
	<key>UIBackgroundModes</key>
	<array>
		<string>bluetooth-central</string>
		<string>bluetooth-peripheral</string>
	</array>
	<key>WiFiAwareServices</key>
	<array>
		<dict>
			<key>ServiceName</key>
			<string>_gapmash._udp</string>
			<key>Publishable</key>
			<true/>
			<key>Subscribable</key>
			<true/>
		</dict>
	</array>
	<key>NSLocalNetworkUsageDescription</key>
	<string>Gap Mash uses local network to discover and communicate with nearby devices over WiFi.</string>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIRequiresFullScreen</key>
	<true/>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
	</array>
</dict>
</plist>
